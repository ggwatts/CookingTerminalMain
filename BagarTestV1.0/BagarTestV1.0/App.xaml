<Application x:Class="BagarTestV1._0.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BagarTestV1._0"
             xmlns:pages="clr-namespace:BagarTestV1._0.Pages"
             xmlns:viewmodels="clr-namespace:BagarTestV1._0.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewmodels:SelectedOrderViewModel}">
            <pages:ChosenOrderPage/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:OrdersViewModel}">
            <pages:OrdersPage/>
        </DataTemplate>


    </Application.Resources>
</Application>
